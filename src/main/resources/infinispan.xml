        <local-cache name="get-number-fbk-posts" configuration="base-template"/>
        <local-cache name="get-provider-array" configuration="base-template"/>
        <local-cache name="get-fbk-collection-count" configuration="base-template"/>
        <local-cache name="get-fbk-family" configuration="base-template"/>
        <local-cache name="get-fbk-posts-array" configuration="base-template"/>
        <local-cache name="get-tweets" configuration="base-template"/>
        <local-cache name="get-gmail-messages" configuration="base-template"/>
    </cache-container>

</infinispan>
