        <!-- cache definitions -->
        <local-cache name="latest-sourceid-provider" configuration="base-template"/>
        <local-cache name="obtain-prov-facts" configuration="base-template"/>
        <local-cache name="obtain-facts-user" configuration="base-template"/>
        <local-cache name="obtain-single-facts" configuration="base-template"/>
        <local-cache name="obtain-numeric-facts" configuration="base-template"/>
        <local-cache name="obtain-binary-facts" configuration="base-template"/>
        <local-cache name="obtain-json-feature-value" configuration="base-template"/>
        <local-cache name="obtain-boolean-feature-value" configuration="base-template"/>
        <local-cache name="obtain-double-feature-value" configuration="base-template"/>
        <local-cache name="obtain-string-feature-value" configuration="base-template"/>
        <local-cache name="obtain-facebook-email" configuration="base-template"/>
        <local-cache name="obtain-specific-fact" configuration="base-template"/>
        <local-cache name="obtain-fact-paypal-verified" configuration="base-template"/>
        <local-cache name="get-facebook-birthday" configuration="base-template"/>
        <local-cache name="get-provider-collection" configuration="base-template"/>
        <local-cache name="get-provider-collection-array" configuration="base-template"/>
        <local-cache name="get-provider-collection-document" configuration="base-template"/>
        <local-cache name="get-facebook-profile" configuration="base-template"/>
        <local-cache name="does-facebook-first-name-match-email" configuration="base-template"/>
        <local-cache name="get-amazon-profile" configuration="base-template"/>
        <local-cache name="get-dropbox-profile" configuration="base-template"/>
        <local-cache name="get-google-profile" configuration="base-template"/>
        <local-cache name="get-linkedin-profile" configuration="base-template"/>
        <local-cache name="get-twitter-profile" configuration="base-template"/>
        <local-cache name="get-paypal-profile" configuration="base-template"/>
        <local-cache name="get-number-fbk-posts-birthday" configuration="base-template"/>
        <local-cache name="get-fbk-array-count-birthday" configuration="base-template"/>
        <local-cache name="get-number-fbk-tags-birthday" configuration="base-template"/>
        <local-cache name="get-number-fbk-status-birthday" configuration="base-template"/>
        <local-cache name="get-number-fbk-photos-birthday" configuration="base-template"/>
